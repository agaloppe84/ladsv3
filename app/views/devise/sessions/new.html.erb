<div class="flex h-full">
  <div class="flex flex-1 flex-col justify-center px-4 py-12 sm:px-6 lg:flex-none lg:px-20 xl:px-24">
    <div class="mx-auto w-full max-w-sm lg:w-96">
      <div>
        <div><%= inline_svg_tag("logos/ads-logo-full-cleaned.svg", class: "h-14 w-14 shrink-0 text-orange-500") %></div>
        <h2 class="mt-8 text-2xl font-bold leading-9 tracking-tight text-gray-900">Admin / Lads-V3</h2>
      </div>

      <div class="mt-10">
        <div>

          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="space-y-6">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email" } %>
              <%= f.input :password,
                          required: false,
                          input_html: { autocomplete: "current-password" } %>
              <%= f.input :remember_me, label: "Se souvenir de moi", as: :boolean if devise_mapping.rememberable? %>

              <div>
                <%= f.button :submit, "Se connecter" %>
              </div>

            </div>
          <% end %>


        </div>

      </div>
    </div>
  </div>

  <div class="relative hidden w-0 flex-1 lg:block">
    <%= image_tag('placeholder.jpg', class: "absolute inset-0 h-full w-full object-cover") %>
  </div>

</div>
