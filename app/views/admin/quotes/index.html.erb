<%= render Admin::HeaderComponent.new(title: "Devis") %>

<ul role="list" class="divide-y divide-gray-100" id="quotes">
  <% @quotes.each do |quote| %>
    <li class="flex items-center gap-x-6 py-5 px-8 w-full">
      <div class="w-2/5">
        <div class="flex items-start gap-x-3 items-center">
          <p class="text-sm font-semibold leading-6 text-gray-900"><%= quote.lastname %></p>
        </div>
        <div class="mt-1 flex items-center gap-x-2 text-xs leading-5 text-gray-500">
          <%= quote.address %>
        </div>
      </div>

      <div class="w-2/5 flex items-center space-x-3">
        <p class="rounded-md whitespace-nowrap px-1.5 py-0.5 text-[10px] font-medium ring-1 ring-inset text-green-500 bg-green-50 ring-green-600/20"><%= quote.product %></p>
        <p class="rounded-md whitespace-nowrap px-1.5 py-0.5 text-[10px] font-medium ring-1 ring-inset text-violet-500 bg-violet-50 ring-violet-600/20"><%= I18n.l quote.created_at, format: :long %></p>
      </div>

      <div class="flex items-center w-1/5 justify-end">
        <%= link_to "DÃ©tails", admin_quote_path(quote), class: "button-light" %>
      </div>
    </li>
  <% end %>
</ul>