<%= render Admin::HeaderComponent.new(title: "Devis") %>

<turbo-frame id="quotes_list">
  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-slate-50">
      <tr>
        <th class="px-6 py-3 text-left text-[8px] font-bold text-gray-400 uppercase tracking-wider">Client</th>
        <th class="px-6 py-3 text-left text-[8px] font-bold text-gray-400 uppercase tracking-wider">Produit</th>
        <th class="px-6 py-3 text-left text-[8px] font-bold text-gray-400 uppercase tracking-wider">Statut</th>
        <th class="px-6 py-3 text-left text-[8px] font-bold text-gray-400 uppercase tracking-wider"></th>
        <th class="px-6 py-3 text-left text-[8px] font-bold text-gray-400 uppercase tracking-wider">Actions</th>
      </tr>
    </thead>
    <tbody class="bg-white divide-y divide-gray-200">
      <% @quotes.each do |quote| %>
        <%= render partial: "quote_row", locals: { quote: quote } %>
      <% end %>
    </tbody>
  </table>
</turbo-frame>
