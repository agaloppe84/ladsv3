<%= render Admin::HeaderComponent.new(title: "EvÃ¨nements", path: new_admin_event_path) %>

<ul role="list" class="divide-y divide-gray-100">
  <% @events.each do |event| %>
    <li class="flex items-center justify-between gap-x-6 py-5 px-8">
      <div class="min-w-0">
        <div class="flex items-start gap-x-3 items-center">
          <p class="text-sm font-semibold leading-6 text-gray-900"><%= event.title %></p>

          <% if event.start_date.to_date <= Date.current && event.end_date.to_date >= Date.current %>
            <p class="rounded-md whitespace-nowrap px-1.5 py-0.5 text-[9px] font-medium ring-1 ring-inset text-green-500 bg-green-50 ring-green-600/20">Actif</p>
          <% end %>



        </div>
        <div class="mt-1 flex items-center gap-x-2 text-xs leading-5 text-gray-500">
          <div class="flex items-center space-x-2 p-1 px-3 rounded border border-gray-100 text-gray-400">
            <time><%= I18n.l event.start_date, format: :long %></time>
            <%= inline_svg_tag("icons/arrow-long-right.svg", class: "text-violet-400 h-5 w-5") %>
            <time><%= I18n.l event.end_date, format: :long %></time>
          </div>
        </div>
      </div>
      <div class="flex flex-none items-center gap-x-4">
        <%= link_to "Modifier", edit_admin_event_path(event), class: "button-light" %>
      </div>
    </li>
  <% end %>
</ul>