<div class="w-full min-h-screen flex relative">
  <section class="h-full w-60 sticky top-20 px-5 py-4 border-r border-gray-100">
    <nav class="flex flex-1 flex-col sidenav" aria-label="Sidebar">
      <ul role="list" class="flex flex-1 flex-col gap-y-7">
        <li>
          <div class="text-xs font-semibold leading-6 text-gray-400">Cat√©gories</div>
          <ul role="list" class="-mx-2 mt-2 space-y-1">
            <% @categories.each do |category| %>
              <li>
                <%= active_link_to category_path(category), class: '"text-gray-700 hover:text-orange-500 hover:bg-gray-50 group flex gap-x-3 rounded-md p-2 text-sm leading-6 font-medium' do %>
                  <span class="flex h-6 w-6 shrink-0 items-center justify-center rounded-lg border text-[0.625rem] font-medium bg-white text-gray-400 border-gray-200 group-hover:border-orange-500 group-hover:text-orange-600"><%= category.name.first.upcase %></span>
                  <span class="truncate"><%= category.name %></span>
                <% end %>
              </li>
            <% end %>
          </ul>
        </li>
      </ul>
    </nav>
  </section>

  <section class="h-full grow bg-gray-100 p-20">
    <% @category.products.each do |product| %>
      <div class="card w-full mb-8">
        <div class="flex">
          <div class="w-2/3 p-8">
            <h1 class="text-2xl font-bold tracking-tight text-gray-900 sm:text-2xl"><%= product.name %></h1>
            <p class="text-sm font-semibold text-orange-400"><%= product.description %></p>
          </div>
          <div class="w-1/3 p-8">
            Image here
          </div>
        </div>

        <div class="border-t border-b border-gray-100 flex w-full">
          <div class="w-1/2 p-8">
            <h3 class="text-sm font-semibold text-gray-900">Infos</h3>
            <p class="text-sm text-gray-500 mt-4 font-medium leading-6"><%= product.infos %></p>
          </div>

          <div class="w-1/2 p-8">
            <h3 class="text-sm font-medium text-gray-900">Options</h3>
            <div class="prose prose-sm mt-4 text-gray-500">
              <ul role="list">
                <% product.options.each do |option| %>
                  <li><%= option.content %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>

        <section aria-labelledby="policies-heading" class="mt-10 w-1/2 hidden">

          <dl class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-1 xl:grid-cols-2">
            <div class="rounded-lg border border-gray-200 bg-gray-50 p-6 text-center">
              <dt>
                <svg class="mx-auto h-6 w-6 flex-shrink-0 text-gray-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M6.115 5.19l.319 1.913A6 6 0 008.11 10.36L9.75 12l-.387.775c-.217.433-.132.956.21 1.298l1.348 1.348c.21.21.329.497.329.795v1.089c0 .426.24.815.622 1.006l.153.076c.433.217.956.132 1.298-.21l.723-.723a8.7 8.7 0 002.288-4.042 1.087 1.087 0 00-.358-1.099l-1.33-1.108c-.251-.21-.582-.299-.905-.245l-1.17.195a1.125 1.125 0 01-.98-.314l-.295-.295a1.125 1.125 0 010-1.591l.13-.132a1.125 1.125 0 011.3-.21l.603.302a.809.809 0 001.086-1.086L14.25 7.5l1.256-.837a4.5 4.5 0 001.528-1.732l.146-.292M6.115 5.19A9 9 0 1017.18 4.64M6.115 5.19A8.965 8.965 0 0112 3c1.929 0 3.716.607 5.18 1.64" />
                </svg>
                <span class="mt-4 text-sm font-medium text-gray-900">International delivery</span>
              </dt>
              <dd class="mt-1 text-sm text-gray-500">Get your order in 2 years</dd>
            </div>
            <div class="rounded-lg border border-gray-200 bg-gray-50 p-6 text-center">
              <dt>
                <svg class="mx-auto h-6 w-6 flex-shrink-0 text-gray-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m-3-2.818l.879.659c1.171.879 3.07.879 4.242 0 1.172-.879 1.172-2.303 0-3.182C13.536 12.219 12.768 12 12 12c-.725 0-1.45-.22-2.003-.659-1.106-.879-1.106-2.303 0-3.182s2.9-.879 4.006 0l.415.33M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span class="mt-4 text-sm font-medium text-gray-900">Loyalty rewards</span>
              </dt>
              <dd class="mt-1 text-sm text-gray-500">Don&#039;t look at other tees</dd>
            </div>
          </dl>
        </section>

        <div class="py-4 px-8">
          <div class="flex">
            <div class="flex space-x-8">
              <div class="flex items-center text-sm font-medium text-yellow-400">
                <svg class="mr-2 h-6 w-6 flex-none" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 18.75a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m3 0h6m-9 0H3.375a1.125 1.125 0 01-1.125-1.125V14.25m17.25 4.5a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m3 0h1.125c.621 0 1.129-.504 1.09-1.124a17.902 17.902 0 00-3.213-9.193 2.056 2.056 0 00-1.58-.86H14.25M16.5 18.75h-2.25m0-11.177v-.958c0-.568-.422-1.048-.987-1.106a48.554 48.554 0 00-10.026 0 1.106 1.106 0 00-.987 1.106v7.635m12-6.677v6.677m0 4.5v-4.5m0 0h-12" />
                </svg>
                <p class="text-gray-600 font-semibold">Sur mesure</p>
              </div>
              <div class="flex items-center text-sm font-medium text-yellow-400">
                <svg class="mr-2 h-6 w-6 flex-none" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12c0 1.268-.63 2.39-1.593 3.068a3.745 3.745 0 01-1.043 3.296 3.745 3.745 0 01-3.296 1.043A3.745 3.745 0 0112 21c-1.268 0-2.39-.63-3.068-1.593a3.746 3.746 0 01-3.296-1.043 3.745 3.745 0 01-1.043-3.296A3.745 3.745 0 013 12c0-1.268.63-2.39 1.593-3.068a3.745 3.745 0 011.043-3.296 3.746 3.746 0 013.296-1.043A3.746 3.746 0 0112 3c1.268 0 2.39.63 3.068 1.593a3.746 3.746 0 013.296 1.043 3.746 3.746 0 011.043 3.296A3.745 3.745 0 0121 12z" />
                </svg>
                <p class="text-gray-600 font-semibold"><%= "#{product.warranty} ans de garantie" %></p>
              </div>
              <div class="flex items-center text-sm font-medium text-yellow-400">
                <svg class="mr-2 h-6 w-6 flex-none" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5A2.25 2.25 0 0121 11.25v7.5" />
                </svg>
                <p class="text-gray-600 font-semibold">Devis gratuit</p>
              </div>
            </div>
          </div>
        </div>



      </div>
    <% end %>
  </section>
</div>
